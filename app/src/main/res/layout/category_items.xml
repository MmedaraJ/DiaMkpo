<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/category_image_h"
    android:foreground="@drawable/green_outline">

    <androidx.cardview.widget.CardView
        android:id="@+id/categoryImageCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/corner_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/categoryImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/placeholder_image"
            android:foreground="@drawable/category_image_overlay"/>

        <TextView
            android:id="@+id/categoryNameSearchFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deals"
            android:fontFamily="@font/roboto_slab_bold"
            android:textSize="@dimen/header_size"
            android:textColor="@color/background"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>