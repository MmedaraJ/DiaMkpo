<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/accountItemImage"
        android:layout_width="@dimen/account_item_w_h"
        android:layout_height="@dimen/account_item_w_h"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/green_heart_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/accountItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/roboto_slab"
        android:gravity="start"
        android:text="@string/liked_meals"
        android:textColor="@color/black"
        android:textSize="@dimen/fifteen"
        app:layout_constraintBottom_toBottomOf="@+id/accountItemImage"
        app:layout_constraintStart_toEndOf="@+id/accountItemImage"
        app:layout_constraintTop_toTopOf="@+id/accountItemImage" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/accountItemName" />

</androidx.constraintlayout.widget.ConstraintLayout>